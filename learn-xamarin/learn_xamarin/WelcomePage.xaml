<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="learn_xamarin.WelcomePage">
  
<StackLayout>
    <Label Text="{Binding LastExpenditures}"></Label>      
    <Label Text="{Binding SpentOverall}"></Label>
    <Label Text="{Binding SpentThisMonth}"></Label>
    <Label Text="{Binding SpentThisWeek}"></Label>
    <Label Text="{Binding SpentToday}"></Label>
    <Button Command="{Binding MoneySpentCommnand}" Text="MONEY SPENT" />
</StackLayout>

</ContentPage>